<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Login | Climbers Connect</title>
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/login.css">

    <!-- Favicon -->
    <link rel="icon" href="./assets/favicon.jpg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;600&display=swap" rel="stylesheet">
</head>
<body>
  <div class="login--text-container">
    <header class="login--header">
      <a href="#">Logo</a>
      <h2 class="signup--redirect">Not a user? <a class="signup__link" href="/signup">Sign up now</a></h2>
    </header>

    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <% if (locals.messages.info) { %>
        <% messages.info.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>

    <div class="login--form-container">
      <h1 class="login--title">Login to Climbers Connect</h1>
      <hr>
      <form class="login--form" action="/login" method="POST">
        <ul class="login--list">
          <li class="login--li">
            <h3 class="login--li-heading">Email:</h3>
            <input class="login--input" type="email" name="email" placeholder="Email"/>
          </li>
          <li class="login--li">
            <h3 class="login--li-heading">Password <span class="min-char-length">(8 character min.)</span>:</h3>
            <input class="login--input" type="password" name="password" placeholder="Password"/>
          </li>
          <li class="submit--li">
            <input class="login--btn" type="submit" value="Login" />
          </li>
        </ul>
      </form>
    </div>
  </div>
</body>
</html>