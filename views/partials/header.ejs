<header class="header">
    <nav class="header--nav">
        <ul class="header--list">
            <li class="header--li  logo--li">
                <a class="header--li-link" href="/login">
                    <img class="header--logo-img" src="/assets/mountain.png">
                    <h3 class="header--logo-text">Climbers Connect</h3>
                </a>
            </li>
            <li class="header--li hide-mobile">
                <a class="header--li-link" href="/posts/feed">
                    <h2>Feed</h2>
                </a>
            </li>
            <li class="header--li hide-mobile">
                <a class="header--li-link" href="/posts/following">
                    <h2>Following</h2>
                </a>
            </li>
            <li class="header--li hide-mobile">
                <form action="/user/<%= user.username %>" method="get">
                    <button class="header--li-button">My Profile</button>
                    <input type="hidden" name="myProfileBtn" value="true">
                </form>
            </li>
            <li class="header--li hide-mobile">
                <form class="search--form" action="/user/get/user" method="GET">
                    <input
                        class="search--input"
                        type="text"
                        name="user"
                        placeholder="Search"
                    >
                    <button class="search--btn" type="submit">
                        <i class="search--icon fa-solid fa-magnifying-glass"></i>
                    </button>
                </form>
            </li>
            <li class="header--li hide-mobile">
                <a class="header--li-link" href="/logout">
                    <h2 class="last--link">Sign out</h2>
                </a>
            </li>
            <li class="reveal-mobile">
                <div class="dropdown-container">
                    <div
                        class="dropdown"
                        data-dropdown
                    >
                        <button
                            class="dropdown-button"
                        >
                            <i
                                id="menu-icon"
                                data-dropdown-button
                                class="fa-solid fa-bars"
                            ></i>
                        </button>

                        <div class="dropdown-menu">
                            <ul class="mobile-list">
                                <li>
                                    <a
                                        class="link-hover"
                                        href="/user/<%= user.username %>"
                                        >Profile</a
                                    >
                                </li>
                                <li>
                                    <a
                                        class="link-hover"
                                        href="/posts/following"
                                        >Following</a
                                    >
                                </li>
                                <li>
                                    <a
                                        class="link-hover"
                                        href="/posts/feed"
                                        >Feed</a
                                    >
                                </li>
                                <!-- <li>
                                    <a
                                        class="link-hover"
                                        href="#"
                                        >Search</a
                                    >
                                </li> -->
                            </ul>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </nav>
</header>
