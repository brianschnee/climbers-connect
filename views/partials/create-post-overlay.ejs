<div class="create--post-wrapper">
    <div class="create--post-container">
        <h2 class="create--post-title">Create Post</h2>
        <i class="close--icon fa-solid fa-x"></i>
        <section class="create--form-container">
            <!-- <div class="choose--post-type">
                <div class="choose--post climb-post">
                    <h2 class="post--climb-title">Climb</h2>
                    <hr class="post--climb-hr">
                </div>
            </div> -->
            <form
                class="climb--form"
                action="/posts/create"
                enctype="multipart/form-data"
                method="POST"
            >
                <label class="climb--label">Title</label>
                <input
                    class="climb--input"
                    type="text"
                    name="title"
                    maxLength="25"
                    placeholder="The Sorcerers Stone"
                    required
                >
                <label class="climb--label">Caption</label>
                <textarea
                    class="climb--textarea"
                    name="caption"
                    maxlength="500"
                    placeholder="Check out this climb I just completed at Yosemite!"
                    required
                ></textarea>
                <label class="climb--label climb-image-margin">Image</label>
                <input
                    class="climb--input climb-input-file"
                    type="file"
                    name="file"
                    required
                >
                <label class="climb--label">Climbing Grade (optional)</label>
                <input
                    class="climb--input"
                    type="text"
                    name="grade"
                    maxLength="5"
                    placeholder="5.11b"
                >
                <label class="climb--label rating--label">Rating</label>
                <div class="star--container">
                    <label>
                        <input
                            class="star--input"
                            type="radio"
                            name="rating"
                            value="10"
                        >
                        <i class="star fa-solid fa-star"></i>
                    </label>
                    <label>
                        <input
                            class="star--input"
                            type="radio"
                            name="rating"
                            value="9"
                        >
                        <i class="star fa-solid fa-star"></i>
                    </label>
                    <label>
                        <input
                            class="star--input"
                            type="radio"
                            name="rating"
                            value="8"
                        >
                        <i class="star fa-solid fa-star"></i>
                    </label>
                    <label>
                        <input
                            class="star--input"
                            type="radio"
                            name="rating"
                            value="7"
                        >
                        <i class="star fa-solid fa-star"></i>
                    </label>
                    <label>
                        <input
                            class="star--input"
                            type="radio"
                            name="rating"
                            value="6"
                        >
                        <i class="star fa-solid fa-star"></i>
                    </label>
                    <label>
                        <input
                            class="star--input"
                            type="radio"
                            name="rating"
                            value="5"
                        >
                        <i class="star fa-solid fa-star"></i>
                    </label>
                    <label>
                        <input
                            class="star--input"
                            type="radio"
                            name="rating"
                            value="4"
                        >
                        <i class="star fa-solid fa-star"></i>
                    </label>
                    <label>
                        <input
                            class="star--input"
                            type="radio"
                            name="rating"
                            value="3"
                        >
                        <i class="star fa-solid fa-star"></i>
                    </label>
                    <label>
                        <input
                            class="star--input"
                            type="radio"
                            name="rating"
                            value="2"
                        >
                        <i class="star fa-solid fa-star"></i>
                    </label>
                    <label>
                        <input
                            class="star--input default--star"
                            type="radio"
                            name="rating"
                            value="1"
                            checked
                        >
                        <i class="star fa-solid fa-star"></i>
                    </label>
                </div>
                <button class="create--post-button" type="submit">Create Post</button>
            </form>
        </section>
    </div>
</div>
